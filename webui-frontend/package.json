{
  "name": "pixivflow-webui",
  "version": "1.0.0",
  "type": "module",
  "description": "PixivFlow WebUI Frontend",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "electron:dev": "NODE_ENV=development electron electron/main.cjs",
    "electron:build": "npm run build:all && electron-builder",
    "electron:build:win": "npm run build:all && electron-builder --win",
    "electron:build:mac": "npm run build:all && electron-builder --mac --arm64",
    "electron:build:linux": "npm run build:all && electron-builder --linux",
    "build:all": "npm run build:backend && npm run build",
    "build:backend": "cd .. && npm install --production=false && npm run build && cd webui-frontend",
    "electron:build:mac:verbose": "bash build-electron.sh",
    "electron:build:mac:simple": "bash build-electron-simple.sh",
    "electron:build:mac:enhanced": "node build-electron-enhanced.cjs",
    "electron:check": "bash check-build-env.sh",
    "electron:pack": "npm run build && electron-builder --dir"
  },
  "main": "electron/main.cjs",
  "dependencies": {
    "@ant-design/icons": "^5.2.6",
    "@tanstack/react-query": "^5.12.0",
    "antd": "^5.12.0",
    "axios": "^1.6.2",
    "dayjs": "^1.11.19",
    "i18next": "^25.6.1",
    "i18next-browser-languagedetector": "^8.2.0",
    "puppeteer-core": "^24.29.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^16.2.4",
    "react-router-dom": "^6.20.0",
    "socket.io-client": "^4.6.1",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@electron/remote": "^2.1.3",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^39.1.1",
    "electron-builder": "^26.0.12",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  }
}
